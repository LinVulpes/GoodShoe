@page
@model GoodShoe.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="text-center" style="max-width: 400px; width: 100%;">
        <!-- Logo -->
        <img src="~/images/logo.png" alt="GoodShoe Logo" style="width: 100px; margin-bottom: 20px;" />

        <!-- Title -->
        <h3 class="mb-4">Login Here</h3>

        <!-- Login Form -->
        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

            <div class="form-group mb-3">
                <input asp-for="Input.Email" class="form-control" placeholder="Email Address" autocomplete="username" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <input asp-for="Input.Password" class="form-control" placeholder="Password" type="password" autocomplete="current-password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <p class="text-muted small">
                    By continuing, I agree to Good Shoes' Privacy Policy and Terms of Use
                </p>
            </div>

            <button id="login-submit" type="submit" class="btn btn-dark w-100 py-2">Continue</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
