@*Updated _Layout.cshtml*@
<html lang="en" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GoodShoe</title>
    <script type="import map"></script>
    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    
    <!-- Chart.js Library -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"></script>
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/order.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)    
</head>
<body class="d-flex flex-column h-100">
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow">
        <div class="container-fluid">
            <!-- Left-Side : Logo and Brand -->
            <div class="d-flex align-items-center">
                <img src="~/images/Logo.png" alt="Good Shoe Logo" class="brand-logo"/>
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">GoodShoe</a>
            </div>

            <!-- Mobile Toggle Button -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Center Navigation Links -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Home" asp-action="Products">Products</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Home" asp-action="Contact">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Home" asp-action="About">About</a>
                    </li>
                    <!-- Admin link - only show if admin is logged in -->
                    @if (Context.Session.GetInt32("AdminId").HasValue)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Admin" asp-action="Index">Admin Dashboard</a>
                        </li>
                    }
                </ul>

                <!-- Right Side: Cart, User Profile, Login/Logout -->
                <div class="d-flex align-items-center ms-auto">
                    @{
                        var customerId = Context.Session.GetInt32("CustomerId");
                        var adminId = Context.Session.GetInt32("AdminId");
                        var customerName = Context.Session.GetString("CustomerName");
                        var adminName = Context.Session.GetString("AdminName");
                        var isLoggedIn = customerId.HasValue || adminId.HasValue;
                    }
                    
                    <!-- Shopping Cart -->
                    @if (!adminId.HasValue)
                    {
                        <div class="me-3" title="Shopping Cart">
                            <a asp-controller="Cart" asp-action="Index" class="text-decoration-none">
                                <img src="~/images/cart.png" alt="Shopping Cart" width="30" height="30"/>
                            </a>
                        </div>
                    }

                    @if (isLoggedIn)
                    {
                        <!-- Logged-in user: show profile picture + name in a dropdown -->
                        <div class="dropdown">
                            <!--== Customer or Admin Login ? ==-->
                            @if (customerId.HasValue)
                            {
                                <a asp-controller="Profile" asp-action="Index" class="text-decoration-none me-2">
                                    <img src="~/images/profile.png" alt="User Icon" width="40" height="40"
                                         style="border-radius: 50%;"/>
                                </a>
                            }
                            else
                            {
                                <a asp-controller="Admin" asp-action="Index" class="text-decoration-none me-2">
                                    <img src="~/images/profile.png" alt="Admin Icon" width="40" height="40"
                                         style="border-radius: 50%;"/>
                                </a>
                            }

                            <button class="btn btn-outline-dark dropdown-toggle" type="button" id="userMenu"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                @(customerName ?? adminName)
                            </button>
                            <!-- === Dropdown-menu for admin and customer === -->
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
                                @if (customerId.HasValue) // For Customer
                                {
                                    <li>
                                        <a class="dropdown-item" asp-controller="Profile" asp-action="Index">
                                            <i class="bi bi-person me-2"></i>Profile
                                        </a>
                                    </li>
                                }
                                else if (adminId.HasValue) // For Admin
                                {
                                    <li>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="Index">
                                            <i class="bi bi-speedometer2 me-2"></i>Dashboard
                                        </a>
                                    </li>
                                }
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li>
                                    <form method="post" asp-controller="Account" asp-action="Logout"
                                          asp-route-returnUrl="@Url.Action("Index", "Home")" class="d-inline">
                                        <button type="submit" class="dropdown-item">
                                            <i class="bi bi-box-arrow-right me-2"></i>Logout
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <!-- Not logged in: show profile icon only + Sign In button -->
                        <div class="me-lg-4" title="Profile">
                            <a asp-controller="Profile" asp-action="Index" title="View Profile">
                                <img src="~/images/profile.png" alt="User Icon" width="50" height="50" style="border-radius: 50%;"/>
                            </a>
                        </div>

                        <div class="me-lg-4 btn-sm" title="Sign-In">
                            <a class="btn btn-dark signin-btn" asp-controller="Account" asp-action="Login">
                                Sign In
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </nav>
</header>

<!-- Main Content - Flex Grow -->
<main role="main" class="flex-grow-1 main-content">
    @RenderBody()
</main>

<!-- Footer -->
<footer class="footer py-4">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <a class="footer-brand" asp-controller="Home" asp-action="Index">GoodShoe</a>
                <p class="mt-2 mb-0">Premium sports footwear for athletes and enthusiasts.</p>
            </div>
            <div class="col-md-6 text-md-end">
                <a class="footer-link me-3" asp-controller="Home" asp-action="Contact">Contact us</a>
                <a class="footer-link me-3" asp-controller="Home" asp-action="FAQ">FAQ</a>
                <a class="footer-link me-3" asp-controller="Home" asp-action="Privacy">Privacy</a>
                <a class="footer-link me-3" asp-controller="Home" asp-action="Terms">Terms & Conditions</a>
                <p class="mt-2 mb-0">&copy; 2025 GoodShoe. All rights reserved.</p>
            </div>
        </div>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
