<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - GoodShoe</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <!-- Left-Side : Logo and Brand -->
            <div class="d-flex align-items-center">
                <img src="~/images/Logo.png" alt="Good Shoe Logo" class="brand-logo"/>
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">GoodShoe</a>
            </div>
            
            <!-- Mobile Toggle Button -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>            

            <!-- Center Navigation Link -->
            <div class="navbar-collapse collapse">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Home" asp-action="Privacy">Shop</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Home" asp-action="Contact">Contact</a>
                    </li>
                </ul>
            </div>

            <!-- Right Side: Cart, User Profile and SIGN IN -->
            <div class="d-flex align-items-center">
                <!-- Shopping Cart -->
                <div class="me-3" title="Shopping Cart">
                    <a href="/cart-page">
                        <img src="~/images/cart.png" alt="Shopping Cart" width="24" height="24">
                    </a>
                </div>

                <!-- User Profile -->
                <div class="me-3" title="User Profile">
                    <div class="user-profile-circle">
                        <a href="/profile-page">
                            <img src="~/images/profile.png" alt="User Profile" width="45" height="45">
                        </a>
                    </div>
                </div>
                
                <!-- Sign In Button -->
                <button class="btn btn-dark btn-sm signin-btn me-3" onclick="handleSignIn()">Sign In</button>
            </div>
        </div>
    </nav>
</header>

<!-- Main Content - Flex Grow -->
<main role="main" class="flex-grow-1">
    @RenderBody()
</main>

<!-- Footer - Will stick to bottom -->
<footer class="footer-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <a class="footer-brand" asp-controller="Home" asp-action="Index">GoodShoe</a>
            </div>
            <div class="col-md-6 text-end">
                <a href="#" class="footer-link me-3">Contact us</a>
                <a href="#" class="footer-link me-3">FAQ</a>
                <a href="#" class="footer-link me-3">Privacy</a>
                <a href="#" class="footer-link me-3">Term & Conditions</a>
            </div>
        </div>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>