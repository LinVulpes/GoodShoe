<section id="testimonial-section" class="py-5 text-white">
    <div class="container text-center">
        <h1 class="testimonial-header mb-5">Here's What Our Customers Say</h1>

        <div class="testimonial-carousel position-relative">
            <div id="testimonial-cards" class="d-flex justify-content-center align-items-center">
                <!-- Cards will be injected by JS -->
            </div>

            <!-- Navigation Controls -->
            <div class="carousel-controls">
                <button class="carousel-nav" onclick="rotateLeft()">
                    <i class="bi bi-arrow-left"></i>
                </button>
                <button class="carousel-nav" onclick="rotateRight()">
                    <i class="bi bi-arrow-right"></i>
                </button>
            </div>
        </div>
    </div>
</section>

<script src="~/js/landing.js"></script>
<script>
    // Landing Page (testimonial section) //
    const testimonials = [
        // Person 1
        {
            name: "Ben Martinez",
            image: "https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=150&h=150&fit=crop&crop=face",
            review: "Great quality, timely delivery. Will buy again! The customer service was exceptional.",
            stars: 4
        },
        // Person 2        
        {
            name: "Cathy Wong",
            image: "https://images.unsplash.com/photo-1438761681033-6461ffad8d80?w=150&h=150&fit=crop&crop=face",
            review: "Impressed by the service and durability. These shoes have lasted me months of daily wear.",
            stars: 5
        },
        // Person 3        
        {
            name: "David Thompson",
            image: "https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?w=150&h=150&fit=crop&crop=face",
            review: "Best shopping experience for sneakers. The website is user-friendly and delivery was fast.",
            stars: 4
        },
        // Person 4        
        {
            name: "Eva Rodriguez",
            image: "https://images.unsplash.com/photo-1489424731084-a5d8b219a5bb?w=150&h=150&fit=crop&crop=face",
            review: "Perfect for running and daily wear. The comfort level is outstanding and style is trendy.",
            stars: 5
        },
        // Person 5        
        {
            name: "Frank Chen",
            image: "https://images.unsplash.com/photo-1500648767791-00dcc994a43e?w=150&h=150&fit=crop&crop=face",
            review: "Excellent value for money. The quality exceeds expectations and fits perfectly.",
            stars: 5
        },
        // Person 6
        {
            name: "Grace Kim",
            image: "https://images.unsplash.com/photo-1544005313-94ddf0286df2?w=150&h=150&fit=crop&crop=face",
            review: "Love the variety of styles available. Found exactly what I was looking for and more!",
            stars: 4
        }
    ];

    let currentIndex = 2;

    function renderCards() {
        const container = document.getElementById("testimonial-cards");
        container.innerHTML = "";

        for (let i = 0; i < testimonials.length; i++) {
            const card = document.createElement("div");
            card.className = "testimonial-card";
            
            
            // Position cards relative to current index
            if (i === currentIndex) {
                card.classList.add("active");
                card.style.left = "calc(50% - 140px)";
            } else if (i === (currentIndex - 1 + testimonials.length) % testimonials.length) {
                card.classList.add("left");
                card.style.left = "calc(50% - 350px)";
            } else if (i === (currentIndex + 1) % testimonials.length) {
                card.classList.add("right");
                card.style.left = "calc(50% + 70px)";
            } else if (i === (currentIndex - 2 + testimonials.length) % testimonials.length) {
                card.classList.add("far-left");
                card.style.left = "calc(50% - 550px)";
            } else if (i === (currentIndex + 2) % testimonials.length) {
                card.classList.add("far-right");
                card.style.left = "calc(50% + 270px)";
            } else {
                continue; // only render 5 visible cards
            }

            // Create stars
            const stars = "★".repeat(testimonials[i].stars) + "☆".repeat(5 - testimonials[i].stars);

            card.innerHTML = `
                    <div class="review-text">
                        "${testimonials[i].review}"
                    </div>
                    <div class="customer-info">
                        <img src="${testimonials[i].image}" alt="${testimonials[i].name}" class="customer-image">
                        <div class="customer-details">
                            <h6 class="customer-name">${testimonials[i].name}</h6>
                            <div class="star-rating">${stars}</div>
                        </div>
                    </div>
                `;

            container.appendChild(card);
        }
    }

    function rotateLeft() {
        // Prevent multiple clicks during animation
        const leftBtn = document.querySelector('.carousel-controls .carousel-nav:first-child');
        const rightBtn = document.querySelector('.carousel-controls .carousel-nav:last-child');
        leftBtn.disabled = true;
        rightBtn.disabled = true;

        // Add sliding class for smooth transition
        const cards = document.querySelectorAll('.testimonial-card');
        cards.forEach(card => card.classList.add('sliding'));

        // Update current index
        currentIndex = (currentIndex - 1 + testimonials.length) % testimonials.length;

        // Re-render cards with new positions
        setTimeout(() => {
            renderCards();
            // Re-enable buttons
            leftBtn.disabled = false;
            rightBtn.disabled = false;
        }, 100);
    }

    function rotateRight() {
        // Prevent multiple clicks during animation
        const leftBtn = document.querySelector('.carousel-controls .carousel-nav:first-child');
        const rightBtn = document.querySelector('.carousel-controls .carousel-nav:last-child');
        leftBtn.disabled = true;
        rightBtn.disabled = true;

        // Add sliding class for smooth transition
        const cards = document.querySelectorAll('.testimonial-card');
        cards.forEach(card => card.classList.add('sliding'));

        // Update current index
        currentIndex = (currentIndex + 1) % testimonials.length;

        // Re-render cards with new positions
        setTimeout(() => {
            renderCards();
            // Re-enable buttons
            leftBtn.disabled = false;
            rightBtn.disabled = false;
        }, 100);
    }

    // Initialize
    renderCards();
</script>