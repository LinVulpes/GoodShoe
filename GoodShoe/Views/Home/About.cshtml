<script>
    // Count-up animation for service numbers
    function animateCountUp() {
        const counters = document.querySelectorAll('.service-number');
        const duration = 2000; // 2 seconds duration

        counters.forEach(counter => {
            const target = parseInt(counter.getAttribute('data-target'));
            const start = parseInt(counter.getAttribute('data-start')) || Math.floor(target * 0.7);
            let current = start;
            const increment = (target - start) / (duration / 16);

            const updateCount = () => {
                current += increment;

                if (current >= target) {
                    current = target;
                }

                // Format the number display
                if (current >= 1000) {
                    const kValue = current / 1000;
                    if (kValue % 1 === 0) {
                        // Whole number, no decimal
                        counter.textContent = Math.floor(kValue) + 'k+';
                    } else {
                        // Has decimal, show up to 2 decimal places but remove trailing zeros
                        const formatted = parseFloat(kValue.toFixed(2));
                        counter.textContent = formatted + 'k+';
                    }
                } else {
                    counter.textContent = Math.floor(current) + '+';
                }

                if (current < target) {
                    requestAnimationFrame(updateCount);
                }
            };

            updateCount();
        });
    }

    // Intersection Observer for triggering animations
    const observerOptions = {
        threshold: 0.5,
        rootMargin: '0px 0px -100px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                if (entry.target.classList.contains('services-section')) {
                    animateCountUp();
                    observer.unobserve(entry.target);
                }
            }
        });
    }, observerOptions);

    // Observe the services section
    const servicesSection = document.querySelector('.services-section');
    observer.observe(servicesSection);
    
    /* Brand Showcase */
    const slider = document.getElementById("brandSlider");
    let scrollAmount = 0;
    let scrollSpeed = 1; // pixels per frame
    let pause = false;

    // Duplicate content to create infinite effect
    slider.innerHTML += slider.innerHTML;

    function animateSlider() {
        if (!pause) {
            scrollAmount += scrollSpeed;
            scrollAmount = scrollAmount % (slider.scrollWidth / 2);
            slider.style.transform = `translateX(-${scrollAmount}px)`;
        }
        requestAnimationFrame(animateSlider);
    }

    // Hover to pause
    slider.addEventListener("mouseenter", () => (pause = true));
    slider.addEventListener("mouseleave", () => (pause = false));

    animateSlider();
    
    /* Our Journey Timeline */
    // Intersection Observer for timeline animations
    const timelineObserverConfig = {
        threshold: 0.3,
        rootMargin: '0px 0px -50px 0px'
    };

    const timelineObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.add('animate');
            }
        });
    }, timelineObserverConfig);

    // Observe all timeline items
    document.querySelectorAll('.timeline-item').forEach(item => {
        timelineObserver.observe(item);
    });

    // Smooth entrance animation delay
    document.addEventListener('DOMContentLoaded', function() {
        const timelineItems = document.querySelectorAll('.timeline-item');
        timelineItems.forEach((item, index) => {
            item.style.animationDelay = `${index * 0.2}s`;
        });
    });
</script>
