<!DOCTYPE html>
@{
    ViewData["Title"] = "GoodShoe - Products";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"]</title>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
</head>
<body>
    <!-- Hero Slider Section -->
    <section class="hero-slider">
        <div class="slider-container">
            <!-- Slide 1 -->
            <div class="slide active">
                <!-- Left Column - Main Content -->
                <div class="slide-left">
                    <p class="brand-name">ALLDAY</p>
                    <hr class="brand-divider"/>
                    <h1 class="slide-title">
                        AIRY &<br/>
                        FLEXIBLE
                    </h1>
                    <p class="slide-description">
                        Enjoy fresh, airy steps with<br>
                        a lightweight that lets your<br>
                        feet breathe
                    </p>
                </div>

                <!-- Center Column - Image -->
                <div class="slide-center">
                    <img src="~/images/slider/slide1-img.png" alt="Airy & Flexible Shoe" class="slide-image"/>
                </div>

                <!-- Right Column -->
                <div class="slide-right">
                    <div class="slide-tagline">
                        <p>Where comfort meets<br>confidence</p>
                    </div>
                    <div class="slide-meta">
                        <span class="badge"><em>Dropping On</em></span>
                        <hr class="divider"/>
                        <p>11-12<br>DECEMBER</p>
                    </div>
                </div>
            </div>
            
            <!-- Slide 2 -->
            <div class="slide active">
                <!-- Left Column - Main Content -->
                <div class="slide-left">
                    <p class="brand-name">ALLDAY</p>
                    <hr class="brand-divider"/>
                    <h1 class="slide-title">
                        AIRY &<br/>
                        FLEXIBLE
                    </h1>
                    <p class="slide-description">
                        Enjoy fresh, airy steps with<br>
                        a lightweight that lets your<br>
                        feet breathe
                    </p>
                </div>

                <!-- Center Column - Image -->
                <div class="slide-center">
                    <img src="~/images/slider/slide2-img.webp" alt="Airy & Flexible Shoe" class="slide-image"/>
                </div>

                <!-- Right Column -->
                <div class="slide-right">
                    <div class="slide-tagline">
                        <p>Where comfort meets<br>confidence</p>
                    </div>
                    <div class="slide-meta">
                        <span class="badge"><em>Dropping On</em></span>
                        <hr class="divider"/>
                        <p>11-12<br>DECEMBER</p>
                    </div>
                </div>
            </div> 
            
            <!-- Slide 3 -->
            <div class="slide active">
                <!-- Left Column - Main Content -->
                <div class="slide-left">
                    <p class="brand-name">ALLDAY</p>
                    <hr class="brand-divider"/>
                    <h1 class="slide-title">
                        AIRY &<br/>
                        FLEXIBLE
                    </h1>
                    <p class="slide-description">
                        Enjoy fresh, airy steps with<br>
                        a lightweight that lets your<br>
                        feet breathe
                    </p>
                </div>

                <!-- Center Column - Image -->
                <div class="slide-center">
                    <img src="~/images/slider/slide3-img.webp" alt="Airy & Flexible Shoe" class="slide-image"/>
                </div>

                <!-- Right Column -->
                <div class="slide-right">
                    <div class="slide-tagline">
                        <p>Where comfort meets<br>confidence</p>
                    </div>
                    <div class="slide-meta">
                        <span class="badge"><em>Dropping On</em></span>
                        <hr class="divider"/>
                        <p>11-12<br>DECEMBER</p>
                    </div>
                </div>
            </div> 
            
            <!-- Navigation Arrows -->
            <button class="slider-nav prev" id="prevBtn">
                <i class="fa-solid fa-angle-left"></i>
            </button>
            <button class="slider-nav next" id="nextBtn">
                <i class="fa-solid fa-angle-right"></i>
            </button>
        </div>
    </section>

    <!-- Products Section -->
    <section class="products-section py-5">
        <div class="container">
            <!-- Section Header -->
            <div class="row align-items-center mb-5">
                <div class="col">
                    <h2 class="section-title mb-0">Our products</h2>
                </div>
                <div class="col-auto">
                    <a href="/" class="explore-more-btn">
                        Explore more
                        <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>
            
            <!-- Product Cards Row -->
            <div class="row g-4">
                <!-- Product 1 -->
                <div class="col-lg-4 col-md-6">
                    <div class="product-card-new">
                        <div class="product-image-container">
                            <img src="~/images/product-1.jpg" alt="GoodShoe 0.1" class="product-img" />
                        </div>
                        <div class="product-details">
                            <h6 class="product-name">GoodShoe 0.1</h6>
                            <p class="product-price">$120</p>
                        </div>
                    </div>
                </div>

                <!-- Product 2 -->
                <div class="col-lg-4 col-md-6">
                    <div class="product-card-new">
                        <div class="product-image-container">
                            <img src="~/images/product-2.jpg" alt="GoodShoe 0.2" class="product-img" />
                        </div>
                        <div class="product-details">
                            <h6 class="product-name">GoodShoe 0.2</h6>
                            <p class="product-price">$120</p>
                        </div>
                    </div>
                </div>

                <!-- Product 3 -->
                <div class="col-lg-4 col-md-6">
                    <div class="product-card-new">
                        <div class="product-image-container">
                            <img src="~/images/product-3.jpg" alt="GoodShoe 0.3" class="product-img" />
                        </div>
                        <div class="product-details">
                            <h6 class="product-name">GoodShoe 0.3</h6>
                            <p class="product-price">$150</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Features Section -->
            <div class="features-section mt-5">
                <div class="row g-4">
                    <div class="col-lg-3 col-md-6">
                        <div class="feature-item">
                            <h6 class="feature-title">Safe Payment</h6>
                            <p class="feature-description">Secure your purchase using the most trusted Payment Methods available!</p>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <div class="feature-item">
                            <h6 class="feature-title">24/7 Support</h6>
                            <p class="feature-description">Shop with confidence and Contact us 24 hours a day!</p>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <div class="feature-item">
                            <h6 class="feature-title">Fast Delivery</h6>
                            <p class="feature-description">Fast shipping & delivery upon an order!</p>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <div class="feature-item">
                            <h6 class="feature-title">Cash Back</h6>
                            <p class="feature-description">Experience a 100% satisfaction Guarantee or Receive a Full Refund within 30 days!</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- About Section -->
            <div class="about-section mt-5">
                <div class="row align-items-center">
                    <div class="col-lg-6">
                        <div class="row g-3">
                            <div class="col-6">
                                <div class="about-image">
                                    <img src="~/images/about-1.jpg" alt="Shoe Collection" class="img-fluid rounded" />
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="about-image">
                                    <img src="~/images/about-2.jpg" alt="Shoe Details" class="img-fluid rounded" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="about-content">
                            <h3 class="about-title">About Us</h3>
                            <h4 class="about-subtitle">We provide high quality shoes that blend comfort, style, and innovation for every step of your journey.</h4>
                            <ul class="about-list">
                                <li>Delivering unmatched comfort in every pair</li>
                                <li>Building a sustainable future for footwear</li>
                                <li>Creating designs that empower your lifestyle</li>
                                <li>Providing exceptional service that exceeds expectations</li>
                            </ul>
                            <a href="/" class="explore-about-btn">
                                Explore more
                                <i class="fas fa-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="~/js/landing.js"></script>
</body>
</html>