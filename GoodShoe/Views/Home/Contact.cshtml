@{
    ViewData["Title"] = "Good Shoe - Contact Us";
    Layout = "_Layout";
}

@section Scripts {
    <link rel="stylesheet" href="~/css/contact.css" asp-append-version="true"/>
}

<body>
    <!-- Hero Section -->
    <section class="contact-hero">
        <div class="container">
            <div class="text-white text-center">
                <h1 class="hero-title">Contact Us</h1>
                <div class="breadcrumb-custom">
                    <a href="/" class="text-light">Home</a> / Contact
                </div>
            </div>
        </div>
    </section>

    <!-- Main Content -->
    <section class="main-content">
        <div class="container">
            <h2 class="section-title">Get in Touch with us?</h2>

            <!-- 4 Contact Cards -->
            <div class="contact-cards-section">
                <div class="row g-4">
                    <div class="col-lg-3 col-md-6">
                        <div class="contact-card h-100">
                            <div class="contact-icon">
                                <i class="bi bi-headset"></i>
                            </div>
                            <h3 class="contact-card-title">Customer Service</h3>
                            <p class="contact-card-text">Get help with your orders, product information, and general
                                inquiries from our dedicated support team.</p>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <div class="contact-card h-100">
                            <div class="contact-icon">
                                <i class="bi bi-arrow-clockwise"></i>
                            </div>
                            <h3 class="contact-card-title">Returns & Refunds</h3>
                            <p class="contact-card-text">Need to return or exchange your purchase? Our returns team will
                                guide you through the process.</p>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <div class="contact-card h-100">
                            <div class="contact-icon">
                                <i class="bi bi-palette"></i>
                            </div>
                            <h3 class="contact-card-title">Customize your Shoe!</h3>
                            <p class="contact-card-text">Want something unique? Contact our design team to create custom
                                shoes tailored to your style.</p>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <div class="contact-card h-100">
                            <div class="contact-icon">
                                <i class="bi bi-person-raised-hand"></i>
                            </div>
                            <h3 class="contact-card-title">Collaborate & Media</h3>
                            <p class="contact-card-text">Interested in partnerships, sponsorships, or media inquiries? Let's
                                work together.</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Two Column Section -->
            <div class="row two-column-section g-4 mb-4">
                <!-- Contact Image -->
                <div class="col-lg-6">
                    <div class="image-section">
                        <img src="/images/your-contact-image.jpg" alt="Contact Image">
                    </div>
                </div>
                <!-- Contact Form-->
                <div class="col-lg-6">
                    <div class="contact-form-section">
                        <h3 class="form-title">Send us a Message!</h3>
                        <p class="form-subtitle">Let us know how to get back to you</p>
                        <form id="contactForm">
                            <!-- Name & Address -->
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" id="fullName" required>
                                        <label for="fullName">Full Name</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input type="email" class="form-control" id="email" required>
                                        <label for="email">Email Address</label>
                                    </div>
                                </div>
                            </div>
                            <!-- Subject -->
                            <div class="form-floating">
                                <input type="text" class="form-control" id="subject" required/>
                                <label for="subject">Subject</label>
                            </div>
                            <!-- Comments/Questions -->
                            <div class="form-floating">
                                <textarea class="form-control" id="message" required></textarea>
                                <label for="message">Comments/Questions</label>
                            </div>
                            <button type="submit" class="btn-submit mt-3" id="submitBtn">
                                <span class="btn-text">
                                    <i class="bi bi-send me-2"></i>Submit Message
                                </span>
                                <span class="btn-loading d-none">
                                    <span class="spinner-border spinner-border-sm me-2" role="status"
                                          aria-hidden="true"></span>
                                    Sending...
                                </span>
                                <span class="btn-success d-none">
                                    <i class="bi bi-check-circle me-2"></i>Sent!
                                </span>
                            </button>
                        </form>
                        <div id="successAlert"></div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Social Media Section -->
    <section class="social-section">
        <div class="container">
            <h2 class="social-title">Connect with Us</h2>
            <p class="social-subtitle mb-4">Stay connected to our new products and be up to date for discounts and exclusive
                offers</p>
            <div class="social-icons">
                <a href="#" class="social-icon" title="Facebook">
                    <i class="bi bi-facebook"></i>
                </a>
                <a href="#" class="social-icon" title="Instagram">
                    <i class="bi bi-instagram"></i>
                </a>
                <a href="#" class="social-icon" title="WhatsApp">
                    <i class="bi bi-whatsapp"></i>
                </a>
                <a href="#" class="social-icon" title="Twitter">
                    <i class="bi bi-twitter"></i>
                </a>
            </div>
        </div>
    </section>

    <!-- Map Section -->
    <section class="map-section">
        <div class="container">
            <div class="map-container"></div>

            <!-- Newsletter Section -->
            <div class="newsletter-section">
                <div class="row align-items-center">
                    <div class="col-lg-6">
                        <div class="newsletter-content">
                            <h3 class="newsletter-title">Our Newsletter</h3>
                            <p class="newsletter-text">Subscribe to our newsletter and stay updated with the latest shoe
                                collections, exclusive deals, and fashion trends delivered straight to your inbox.</p>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <form class="newsletter-form" id="newsletterForm">
                            <input type="email" class="newsletter-input" placeholder="Enter your email address" required>
                            <button type="submit" class="btn-newsletter">
                                <i class="bi bi-envelope me-2"></i>Subscribe
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>

<script src="~/js/site.js"></script>