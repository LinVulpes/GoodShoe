<!-- Product Management -->
@model List<Product>
@{
    ViewData["Title"] = "Product Management";
}

<div class="container main-context">
    <div class="header-action back-button-container mb-4">
        <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i>
        </a>
    </div>
    <h1 class="main-title">Product List</h1>
    <a asp-controller="Admin" asp-action="Create">Add New Product</a>
    <table class="table table-bordered table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th>Size</th>
            <th>Price</th>
            <th>Stock</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.AvailableSizes</td>
                <td>@product.Price</td>
                <td>@product.StockCount</td>
                <td>
                    <a asp-controller="Admin" asp-action="Edit"
                       asp-route-id="@product.Id"
                       asp-route-slug="@product.Name">Edit</a>
                    <a asp-controller="Admin" asp-action="Delete"
                       asp-route-id="@product.Id"
                       asp-route-slug="@product.Name">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>