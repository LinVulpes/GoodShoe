@model GoodShoe.Models.Product

@{
    ViewData["Title"] = "Admin Product Details";
}
<style>
    .details-container {
        max-width: 1200px;
        margin: 40px auto;
        padding: 30px;
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    }

    .details-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        padding-bottom: 20px;
        border-bottom: 2px solid #f0f0f0;
    }

    .details-title {
        font-size: 2rem;
        font-weight: 700;
        color: #333;
        margin: 0;
    }

    .btn-secondary {
        background: #6c757d;
        color: white;
        border: none;
        padding: 8px 15px;
        border-radius: 6px;
        text-decoration: none;
    }

    .btn-secondary:hover {
        background: #5a6268;
        color: white;
    }

    .btn-primary {
        background: #454545;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 8px;
        text-decoration: none;
        margin: 0 5px;
    }

    .btn-primary:hover {
        background: #333;
        color: white;
    }

    .btn-danger {
        background: #e74c3c;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 8px;
        text-decoration: none;
        margin: 0 5px;
    }

    .btn-danger:hover {
        background: #c0392b;
        color: white;
    }

    .details-grid {
        display: grid;
        grid-template-columns: 400px 1fr;
        gap: 40px;
        margin-bottom: 30px;
    }

    .product-image-container {
        width: 100%;
        height: 400px;
        border-radius: 12px;
        background-color: #f8f9fa;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 10px 8px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    /* Actual image */
    .product-image-container img {
        max-width: 100%;
        max-height: 100%;
        object-fit: contain;
        border-radius: 12px;
    }

    .product-title {
        font-size: 1.8rem;
        font-weight: 700;
        color: #333;
        margin-bottom: 10px;
    }

    .product-brand {
        font-size: 1.2rem;
        color: #6c757d;
        margin-bottom: 25px;
    }

    .info-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
        margin-bottom: 30px;
    }

    .info-item {
        padding: 20px;
        background: #f8f9fa;
        border-radius: 8px;
        border-left: 4px solid #454545;
    }

    .info-label {
        display: block;
        font-weight: 600;
        color: #6c757d;
        margin-bottom: 8px;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .info-value {
        font-size: 1.2rem;
        font-weight: 600;
        color: #333;
    }

    .price-value {
        color: #27ae60;
        font-size: 1.5rem;
    }

    .stock-value {
        padding: 8px 16px;
        border-radius: 20px;
        font-weight: 500;
        display: inline-block;
    }

    .stock-high {
        background: #e8f5e8;
        color: #27ae60;
    }

    .stock-low {
        background: #fff3e0;
        color: #f39c12;
    }

    .stock-out {
        background: #ffebee;
        color: #e74c3c;
    }

    .description-section {
        margin-bottom: 30px;
    }

    .section-title {
        font-size: 1.3rem;
        font-weight: 600;
        color: #333;
        margin-bottom: 15px;
        border-bottom: 2px solid #454545;
        padding-bottom: 8px;
        display: inline-block;
    }

    .description-text {
        color: #5a6c7d;
        line-height: 1.6;
        font-size: 1rem;
    }

    .sizes-section {
        margin-bottom: 30px;
    }

    .sizes-table {
        background: white;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .sizes-table table {
        width: 100%;
        margin: 0;
    }

    .sizes-table th {
        background: #f8f9fa;
        padding: 15px;
        font-weight: 600;
        color: #333;
        border-bottom: 2px solid #dee2e6;
    }

    .sizes-table td {
        padding: 12px 15px;
        border-bottom: 1px solid #f0f0f0;
    }

    .size-badge {
        background: #454545;
        color: white;
        padding: 6px 12px;
        border-radius: 15px;
        font-weight: 500;
    }

    .details-actions {
        display: flex;
        gap: 15px;
        justify-content: center;
        padding-top: 20px;
        border-top: 2px solid #f0f0f0;
    }

    .back-button-container {
        margin-bottom: 20px;
    }
</style>
<body>
    <div class="details-container">
        <!-- Back Button -->
        <div class="back-button-container">
            <a asp-controller="Admin" asp-action="ProdList" class="btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Product
            </a>
        </div>

        <!-- Header -->
        <div class="details-header">
            <h1 class="details-title">Product Details</h1>
        </div>

        <!-- Product Details Grid -->
        <div class="details-grid">
            <!-- Product Image -->
            <div class="image-section">
                <div class="product-image-container">
                    @if (Model.Image != null)
                    {
                        <img src="@Url.Action("GetImage", "Products", new { id = Model.ProductId })"
                             alt="@Model.Name" />
                    }
                    else if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl"
                             alt="@Model.Name"
                             onerror="this.src='/images/products/placeholder.jpg'" />
                    }
                    else
                    {
                        <img src="/images/products/placeholder.jpg"
                             alt="@Model.Name" />
                    }
                </div>
            </div>

            <!-- Product Information -->
            <div class="info-section">
                <h2 class="product-title">@Model.Name</h2>
                <p class="product-brand">@Model.Brand</p>

                <!-- Info Grid -->
                <div class="info-grid">
                    <div class="info-item">
                        <span class="info-label">Price</span>
                        <div class="info-value price-value">$@Model.Price.ToString("F2")</div>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Category</span>
                        <div class="info-value">@Model.Category</div>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Color</span>
                        <div class="info-value">@Model.Color</div>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Total Stock</span>
                        <div class="info-value">
                            <span class="stock-value @(Model.StockCount == 0 ? "stock-out" : Model.StockCount < 10 ? "stock-low" : "stock-high")">
                                @Model.StockCount
                            </span>
                        </div>
                    </div>
                </div>

                <!-- Description -->
                <div class="description-section">
                    <h3 class="section-title">Description</h3>
                    <p class="description-text">
                        @Model.Description
                    </p>
                </div>
            </div>
        </div>

        <!-- Sizes Section -->
        <div class="sizes-section">
            <h3 class="section-title">Stock by Size</h3>
            <div class="sizes-table">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Size</th>
                            <th>Stock Count</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.ProductVariants.Any())
                        {
                            @foreach (var variant in Model.ProductVariants.OrderBy(pv => pv.Size))
                            {
                                <tr>
                                    <td><span class="size-badge">US @variant.Size</span></td>
                                    <td>@variant.StockCount</td>
                                    <td>
                                        <span class="stock-value @(variant.StockCount == 0 ? "stock-out" : variant.StockCount < 5 ? "stock-low" : "stock-high")">
                                            @(variant.StockCount == 0 ? "Out of Stock" : variant.StockCount < 5 ? "Low Stock" : "In Stock")
                                        </span>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3" class="text-center text-muted">No size variants available</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="details-actions">
            <a asp-action="Edit" asp-route-id="@Model?.ProductId" class="btn-primary">
                <i class="bi bi-pencil"></i> Edit Product
            </a>
            <a asp-action="Delete" asp-route-id="@Model?.ProductId" class="btn-danger">
                <i class="bi bi-trash"></i> Delete Product
            </a>
        </div>
    </div>
</body>