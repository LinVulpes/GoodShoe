@model GoodShoe.ViewModels.CreateOrderViewModel
@{
    ViewData["Title"] = "Create New Order";
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/admin.css" />

<div class="admin-container">
    <!-- Header -->
    <div class="admin-header">
        <h1 class="admin-title">
            <i class="fas fa-plus-circle"></i>
            Create New Order
        </h1>
        <div class="header-action back-button-container mb-4">
            <a href="@Url.Action("OrderList", "Admin")" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Orders
            </a>
        </div>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Create Order Form -->
    <div class="form-container">
        <form asp-action="CreateOrder" method="post" class="admin-form">
            <div class="form-grid">
                <!-- Left Column: Order Details -->
                <div class="form-section">
                    <h3 class="section-title">Order Information</h3>
                    
                    <div class="form-group">
                        <label asp-for="CustomerId" class="form-label">Customer</label>
                        <select asp-for="CustomerId" class="form-control" required>
                            <option value="">Select Customer</option>
                            @foreach (var customer in Model.Customers)
                            {
                                <option value="@customer.CustomerId">@customer.Email</option>
                            }
                        </select>
                        <span asp-validation-for="CustomerId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="TotalAmount" class="form-label">Total Amount ($)</label>
                        <input asp-for="TotalAmount" class="form-control" type="number" step="0.01" min="0.01" required />
                        <span asp-validation-for="TotalAmount" class="text-danger"></span>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="Status" class="form-label">Order Status</label>
                            <select asp-for="Status" class="form-control">
                                @foreach (var status in Model.StatusOptions)
                                {
                                    <option value="@status" selected="@(status == Model.Status)">@status</option>
                                }
                            </select>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="CreatedAt" class="form-label">Order Date</label>
                            <input asp-for="CreatedAt" class="form-control" type="datetime-local" required />
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Address" class="form-label">Delivery Address</label>
                        <textarea asp-for="Address" class="form-control" rows="3" placeholder="Will use customer's address if left empty"></textarea>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>

                <!-- Right Column: Payment & Products -->
                <div class="form-section">
                    <h3 class="section-title">Payment & Products</h3>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="PaymentMethod" class="form-label">Payment Method</label>
                            <select asp-for="PaymentMethod" class="form-control">
                                @foreach (var method in Model.PaymentMethods)
                                {
                                    <option value="@method" selected="@(method == Model.PaymentMethod)">@method</option>
                                }
                            </select>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="PaymentStatus" class="form-label">Payment Status</label>
                            <select asp-for="PaymentStatus" class="form-control">
                                @foreach (var status in Model.PaymentStatusOptions)
                                {
                                    <option value="@status" selected="@(status == Model.PaymentStatus)">@status</option>
                                }
                            </select>
                        </div>
                    </div>

                    <!-- Simple Product Selection -->
                    <div class="form-group">
                        <label class="form-label">Add Products (Optional)</label>
                        <div class="form-help">
                            <small>You can add products now or edit the order later to add items</small>
                        </div>
                        
                        <div class="product-selection">
                            <div class="form-group">
                                <label asp-for="ProductIds" class="form-label">Product IDs (comma-separated)</label>
                                <input asp-for="ProductIds" class="form-control" placeholder="e.g., 1,3,5" />
                                <small class="form-text text-muted">Enter product IDs separated by commas</small>
                            </div>
                            
                            <div class="form-row">
                                <div class="form-group">
                                    <label asp-for="Quantities" class="form-label">Quantities (comma-separated)</label>
                                    <input asp-for="Quantities" class="form-control" placeholder="e.g., 1,2,1" />
                                </div>
                                
                                <div class="form-group">
                                    <label asp-for="Sizes" class="form-label">Sizes (comma-separated)</label>
                                    <input asp-for="Sizes" class="form-control" placeholder="e.g., 9,10,11" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Available Products Reference -->
                    <div class="available-products">
                        <h4>Available Products:</h4>
                        <div class="products-list">
                            @foreach (var product in Model.Products.Take(10))
                            {
                                <div class="product-ref">
                                    <strong>ID: @product.ProductId</strong> - @product.Name 
                                    <span class="price">(@product.Price.ToString("C"))</span>
                                    <br><small>Sizes: @string.Join(", ", product.ProductVariants.Where(pv => pv.StockCount > 0).Select(pv => pv.Size))</small>
                                </div>
                            }
                            @if (Model.Products.Count > 10)
                            {
                                <small class="text-muted">... and @(Model.Products.Count - 10) more products</small>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Form Actions -->
            <div class="form-actions">
                <button type="submit" class="btn btn-success btn-lg">
                    <i class="fas fa-plus"></i> Create Order
                </button>
                <a asp-action="OrderList" class="btn btn-secondary btn-lg">
                    <i class="fas fa-times"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

<style>
    .product-selection {
        background: #f8f9fa;
        padding: 15px;
        border-radius: 8px;
        margin-top: 10px;
    }
    
    .available-products {
        background: #f8f9fa;
        padding: 15px;
        border-radius: 8px;
        margin-top: 15px;
        max-height: 300px;
        overflow-y: auto;
    }
    
    .available-products h4 {
        margin-bottom: 10px;
        color: #2c3e50;
        font-size: 1rem;
    }
    
    .product-ref {
        padding: 8px 0;
        border-bottom: 1px solid #e8e8e8;
    }
    
    .product-ref:last-child {
        border-bottom: none;
    }
    
    .price {
        color: #27ae60;
        font-weight: 600;
    }
    
    .form-help {
        margin-bottom: 10px;
    }
    
    .form-help small {
        color: #6c757d;
        font-style: italic;
    }
</style>