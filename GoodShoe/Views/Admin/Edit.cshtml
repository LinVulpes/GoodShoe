@model GoodShoe.Models.Product

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/admin.css" />

<div class="create-container">
    <!-- Header -->
    <div class="create-header">
        <h1 class="section-title">Edit Product</h1>
    </div>

    <!-- Next is the form section -->
    <form asp-action="Edit" method="post">

        <div class="form-group">
            <label asp-for="Name" class="control-label">Name:</label>
            <input asp-for="Name" class="form-input" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Brand" class="control-label"></label>
            <input asp-for="Brand" class="form-input" />
            <span asp-validation-for="Brand" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Price" class="control-label"></label>
            <input asp-for="Price" class="form-input" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        
        <!-- Shoe Sizes -->
        <div class="form-group">
            <label class="control-label">Available Sizes:</label>
            <div class="row">
                @{
                    var availableSizes = Model.GetSizesList();
                }
                @for (int size = 8; size <= 16; size++)
                {
                    <div class="col-md-3">
                        <input type="checkbox" 
                               name="selectedSizes" 
                               value="@size" 
                               id="size@size" 
                               @(availableSizes.Contains(size.ToString()) ? "checked" : "") />
                        <label for="size@size">US @size</label>
                    </div>
                }
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-input" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="Color" class="control-label"></label>
            <input asp-for="Color" class="form-input" />
            <span asp-validation-for="Color" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="ImageUrl" class="control-label">Image URL:</label>
            <input asp-for="ImageUrl" class="form-control" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-action="ProdList" class="btn btn-primary">Cancel</a> <!-- back to list -->
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}